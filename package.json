  "scripts": {
    "dev": "tsx watch ./src/server/app.ts",
    "dev-built": "node ./src/server/app.js",
    "build": "cd ./src/server && tsc --build && cd ../client && tsc && cd ../.. && vite build",
    "dev-windows": "cd ./src/server && env.bat && cd ../../ && tsx watch ./src/server/app.ts",
    "dev-windows-built": "cd ./src/server && env.bat && cd ../../ && node ./src/server/app.js",
    "build-windows": "cd ./src/server && env.bat && tsc --build && cd ../client && tsc && cd ../.. && vite build",
    "dev-linux": "cd ./src/server && env.sh && cd ../../ && tsx watch ./src/server/app.ts",
    "dev-linux-built": "cd ./src/server && env.sh && cd ../../ && node ./src/server/app.js",
    "build-linux": "cd ./src/server && env.sh && tsc --build && cd ../client && tsc && cd ../.. && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
